<div class="container">
  <div class="col-md-3">
<%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Mobile/Manufactured Homes</h1>

    <%= form_for @manufactured, url: buyer_manufactured_home_path(@buyer, @manufactured) do |f| %>
    <div class="form-group">
      <%= f.label :m_home_exists %>
      <%= f.select :m_home_exists, ["Yes", "No"] %>
    </div><br />
    <div class="form-group">
      <%= f.label :m_home_real_estate %>
      <%= f.select :m_home_real_estate, ["Yes", "No"] %>
    </div><br />
    <div class="form-group">
        <%= f.label "Housing Affidavit" %><br />
        <%= f.file_field :m_home_affidavit, mulitpart: true %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br />

    <%= link_to "Back", buyer_manufactured_home_path(@buyer, @manufactured), class: "btn btn-primary" %>
</div>
