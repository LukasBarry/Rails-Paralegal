<div class="container">
  <div class="col-md-3">
<%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Open Liens</h1>

    <%= form_for @lien, url: buyer_lien_path(@buyer, @lien) do |f| %>
    <div class="form-group">
      <%= f.label :liens %>
      <%= f.text_field :liens, class: "form-control" %>
    </div><br />
    <div class="form-group">
      <%= f.label :lien_amount %>
      <%= f.number_field :lien_amount, class: "form-control" %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br />

    <%= link_to "Back", buyer_lien_path(@buyer, @lien), class: "btn btn-primary" %> |
    <%= link_to "Next", new_buyer_easement_path(@buyer, @easement), class: "btn btn-primary" %>
</div>
