        <li class="active"><a href="#">Occupancy Status</a></li>
        <li class="active"><a href="#">Construction</a></li>
        <li class="active"><a href="#">Property Use</a></li>
      </ul>
      </div>
       <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
    <%= yield %>
  </div>

</body>
</html>
