<%= form_for @buyer do |f| %>
<div class="form-group">
  <%= f.label :current_owner  %>
  <%= f.text_field :current_owner %>
</div><br />
<div class="form-group">
  <%= f.label :borrower %>
  <%= f.text_field :borrower %>
</div><br />
<div class="form-group">
  <%= f.label :property_address %>
  <%= f.text_field :property_address, placeholder: "ex. 123 Main St" %>
</div><br />
<div class="form-group">
  <%= f.label :county %>
  <%= f.text_field :county %>
</div><br />
<div class="form-group">
  <%= f.label :purchase_price %>
  <%= f.number_field :purchase_price %>
</div><br />
<div class="form-group">
  <%= f.label :owners_coverage %>
  <%= f.number_field :owners_coverage %>
</div><br />
<div class="form-group">
  <%= f.label :lender_name %>
  <%= f.text_field :lender_name %>
</div><br />
<div class="form-group">
  <%= f.label :type_of_loan %>
  <%= f.select :type_of_loan, ["Conventional", "FHA", "VA", "Temporary Construction", "Permanent Construction"] %>
</div><br />
<div class="form-group">
  <%= f.label :loan_number %>
  <%= f.number_field :loan_number %>
</div><br />
<div class="form-group">
  <%= f.label :loan_amount %>
  <%= f.number_field :loan_amount %>
</div><br />
<div class="form-group">
  <%= f.label :type_of_policy %>
  <%= f.select :type_of_policy, ["ALTA Loan Policy", "Short Form Policy", "Leasehold Loan Policy"] %>
</div><br />
<div class="form-group">
  <%= f.label :icl_requested %>
  <%= f.select :icl_requested, ["Yes", "No"] %>
</div><br />
<div class="form-group">
  <%= f.label :alta_endorsement %>
  <%= f.text_field :alta_endorsement %>
</div><br />
<div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
</div>
<% end %>
