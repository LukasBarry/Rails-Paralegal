
<!-- form_for @buyer, url: forms_path(@buyer), method: :put do -->

<%= form_for @buyer do |f| %>
<div class="form-group">
  <%= f.label :current_owner  %>
  <%= f.text_field :current_owner, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :borrower %>
  <%= f.text_field :borrower, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :property_address %>
  <%= f.text_field :property_address, class: "form-control", placeholder: "Street Number and Name" %>
</div><br />
<div class="form-group">
  <%= f.label :county %>
  <%= f.text_field :county, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :purchase_price %>
  <%= f.number_field :purchase_price, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :owners_coverage %>
  <%= f.number_field :owners_coverage, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :lender_name %>
  <%= f.text_field :lender_name, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :type_of_loan %>
  <%= f.select :type_of_loan, ["Conventional", "FHA", "VA", "Temporary Construction", "Permanent Construction"], class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :loan_number %>
  <%= f.number_field :loan_number, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :loan_amount %>
  <%= f.number_field :loan_amount, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :type_of_policy %>
  <%= f.select :type_of_policy, ["ALTA Loan Policy", "Short Form Policy", "Leasehold Loan Policy"], class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :icl_requested %>
  <%= f.select :icl_requested, ["Yes", "No"], class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :alta_endorsement %>
  <%= f.text_field :alta_endorsement %>
</div><br />
<div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
</div><br />
<% end %>
