<div class="container">
  <div class="col-md-3">
<%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Current Occupants</h1>

    <%= form_for @occupancy, url: buyer_occupancy_path(@buyer, @occupancy) do |f| %>
    <div class="form-group">
      <%= f.label :occupants %>
      <%= f.select :occupants, ["Owner", "Tenant", "Unimproved"] %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br />

    <%= link_to "Back", buyer_occupancy_path(@buyer, @occupancy), class: "btn btn-primary" %> |
    <%= link_to "Next", new_buyer_construction_path(@buyer, @construction), class: "btn btn-primary" %>
</div>
