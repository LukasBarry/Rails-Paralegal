<div class="container">
  <div class="col-md-3">
<%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Easement/Right of Way Information</h1>

    <%= form_for @easement, url: buyer_easement_path(@buyer, @easement) do |f| %>
    <div class="form-group">
      <%= f.label :exists %>
      <%= f.select :exists, ["Yes", "No"] %>
    </div><br />
    <div class="form-group">
      <%= f.label :effects %>
      <%= f.text_field :effects, class: "form-control" %>
    </di><br />
    <div class="form-group">
        <%= f.label "Easements/Right of Ways" %><br />
        <%= f.file_field :recorded_easement %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br />

    <%= link_to "Back", buyer_easement_path(@buyer, @easement), class: "btn btn-primary" %> |
    <%= link_to "Next", new_buyer_prior_policy_path(@buyer, @prior), class: "btn btn-primary" %>
</div>
