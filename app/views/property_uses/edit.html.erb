<div class="container">
  <div class="col-md-3">
<%= render 'navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Property Use</h1><br />

    <%= form_for @property, url: buyer_property_use_path(@buyer, @property_use) do |f| %>
    <div class="form-group">
      <%= f.label :property_use_type %>
      <%= f.select :property_use_type, ["Residential", "Commercial"] %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>

    <%= link_to "Back", buyer_property_use_path(@buyer, @property), class: "btn btn-primary" %> |
    <%= link_to "Next", new_buyer_mortgage_path(@buyer, @mortgage), class: "btn btn-primary" %>
</div>
