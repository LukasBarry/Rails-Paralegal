<div class="container">
  <div class="col-md-3">
    <%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">

<h1>Mortgage Information</h1>

<%= form_for @mortgage, url: buyer_mortgage_path(@buyer, @mortgage) do |f| %>
  <div class="form-group">
    <%= f.label :owner %>
    <%= f.text_field :owner, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :dated %>
    <%= f.date_field :dated, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :book %>
    <%= f.number_field :book, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :page %>
    <%= f.number_field :page, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control" %>
  </div><br />
  <div class='cant-be-seen'>
    <%= f.number_field :buyer_id, value: @buyer.id %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div><br />
<% end %>

<%= link_to "Back", buyer_mortgage_path(@buyer, @mortgage), class: "btn btn-primary" %>
</div>
