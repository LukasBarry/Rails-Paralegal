<%= form_for @mortgage, url: buyer_mortgages_path do |f| %>
  <div class="form-group">
    <%= f.label :owner %>
    <%= f.text_field :owner, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :dated %>
    <%= f.date_field :dated, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :book %>
    <%= f.number_field :book, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :page %>
    <%= f.number_field :page, class: "form-control" %>
  </div><br />
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.number_field :amount, class: "form-control" %>
  </div><br />
  <div class='cant-be-seen'>
    <%= f.number_field :buyer_id, value: @buyer.id %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div><br />
<% end %>
