<%= form_for @construction, url: buyer_constructions_path do |f| %>
<div class="form-group">
  <%= f.label "Is Construction Complete" %>
  <%= f.select :construct_complete, ["Yes", "No"] %>
</div><br />
<div class="form-group">
  <%= f.label :construct_lien_appointed %>
  <%= f.select :construct_lien_appointed, ["Yes", "No"] %>
</div><br />
<div class="form-group">
  <%= f.label :construct_lien_name %>
  <%= f.text_field :construct_lien_name, class: "form-control" %>
</div><br />
<div class='cant-be-seen'>
  <%= f.number_field :buyer_id, value: @buyer.id %>
</div>
<div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
</div>
<% end  %>
