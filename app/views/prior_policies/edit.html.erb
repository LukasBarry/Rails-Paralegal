<div class="container">
  <div class="col-md-3">
<%= render 'buyers/navbar' %>
  </div>
  <div class="col-md-9">
    <h1>Prior Title Policies</h1>

    <%= form_for @prior, url: buyer_prior_policy_path(@buyer, @prior) do |f| %>
    <div class="form-group">
      <%= f.label :pp_exists %>
      <%= f.select :pp_exists, ["Yes", "No"] %>
    </div><br />
    <div class="form-group">
        <%= f.label "Prior Policy" %><br />
        <%= f.file_field :pp_copy %>
    </div><br />
    <div class='cant-be-seen'>
      <%= f.number_field :buyer_id, value: @buyer.id %>
    </div>
    <div class="actions">
        <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
    <% end %>
    <br />

    <%= link_to "Back", buyer_prior_policy_path(@buyer, @prior), class: "btn btn-primary" %>
</div>
