<div class="container">
  <div class="col-md-3">
<%= render 'navbar' %>
  </div>
  <div class="col-md-9">
<h1>Taxes</h1>

<%= form_for @tax, url: buyer_tax_path(@buyer, @tax) do |f| %>
<div class="form-group">
  <%= f.label :paid_through %>
  <%= f.number_field :paid_through, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :amount %>
  <%= f.number_field :amount, class: "form-control" %>
</div><br />
<div class='cant-be-seen'>
  <%= f.number_field :buyer_id, value: @buyer.id %>
</div>
<div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
</div>
<% end %>
<br /

<%= link_to "Back", buyer_tax_path(@buyer, @tax), class: "btn btn-primary" %> |
<%= link_to "Next", new_buyer_lien_path(@buyer, @lien), class: "btn btn-primary" %>
  </div>
