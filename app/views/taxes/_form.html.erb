<%= form_for @tax, url: buyer_taxes_path do |f| %>
<div class="form-group">
  <%= f.label :paid_through %>
  <%= f.number_field :paid_through, class: "form-control" %>
</div><br />
<div class="form-group">
  <%= f.label :amount %>
  <%= f.number_field :amount, class: "form-control" %>
</div><br />
<div class='cant-be-seen'>
  <%= f.number_field :buyer_id, value: @buyer.id %>
</div>
<div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
</div>
<% end %>
